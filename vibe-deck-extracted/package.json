{
  "name": "vibedeck",
  "version": "1.2.0",
  "description": "Voice-powered terminal with AI agents - The Ultimate Vibe Coding Interface",
  "main": "dist/main/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac dmg",
    "build:dir": "electron-builder --mac dir"
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "@types/three": "^0.182.0",
    "axios": "^1.13.2",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "groq-sdk": "^0.37.0",
    "node-hid": "^3.2.0",
    "node-pty": "^1.0.0",
    "openai": "^4.24.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ssh2": "^1.15.0",
    "three": "^0.182.0",
    "ws": "^8.19.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "npmRebuild": false,
    "appId": "com.vibedeck.remote",
    "productName": "Vibe Deck",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "darkModeSupport": true,
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Vibe Deck ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**",
      "node_modules/node-hid/**",
      "node_modules/ssh2/**",
      "node_modules/ffmpeg-static/**"
    ],
    "directories": {
      "output": "release"
    }
  }
}
